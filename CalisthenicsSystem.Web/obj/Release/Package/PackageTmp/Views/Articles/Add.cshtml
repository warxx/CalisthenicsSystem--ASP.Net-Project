@model CalisthenicsSystem.Models.ViewModels.Articles.AddArticleVm

@{
    ViewBag.Title = "Add";
}

<div class="jumbotron">
    <div class="container">
        @using (Html.BeginForm("Add", "Articles", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        @Html.AntiForgeryToken()
        <h3>Създай нова статия</h3>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "15" })
                @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ImageUrl, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ImageUrl, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Добави статия" class="btn btn-success" style="margin-right: 15px;" />
                @Html.ActionLink("Откажи", "All", "Articles", null, new { @class = "btn btn-danger" })
            </div>
        </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


