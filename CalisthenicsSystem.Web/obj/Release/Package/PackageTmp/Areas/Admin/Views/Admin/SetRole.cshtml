@model CalisthenicsSystem.Models.ViewModels.Admin.SetRoleVm

@{
    ViewBag.Title = "SetRole";
}

<div class="jumbotron" style="background-color: white">
    <div clas="container">
        <div class="row">
            <div class="col-sm-5">
                <h3>Потребител</h3>
                <hr />
                
                <p style="font-size: 18px">Избери роля, която искаш да получи <strong>@Model.UserName: </strong></p>
                <br/>
                
                @using (Html.BeginForm("SetRole", "Admin", new { userName = $"{Model.UserName}" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.HiddenFor(vm=>vm.UserName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(r => r.Roles, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(r => r.Roles, new List<SelectListItem>()
                            {
                                new SelectListItem() { Text = "Admin", Value = "Admin"},
                                new SelectListItem() { Text = "Moderator", Value = "Moderator"},
                                new SelectListItem() { Text = "Blog Author", Value = "BlogAuthor"}
                            },
                            new { @class = "form-control", @Name="RoleName" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Създай" class="btn btn-success" style="margin-right: 15px;" />
                            @Html.ActionLink("Откажи", "AllUsers", "Admin", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                }
            </div>          
        </div>
    </div>
</div>


