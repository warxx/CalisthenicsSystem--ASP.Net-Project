@model CalisthenicsSystem.Models.ViewModels.Users.Profiles.EditProfileVm

@{
    ViewBag.Title = "Edit";
}

<div class="jumbotron">
    <div clas="container">
        <div class="row">
            @Html.Partial("_ProfileView")
            <div class="col-sm-offset-1 col-sm-9">
                <div class="panel panel-primary" style="background-color: rgba(245, 245, 245, 0)">
                    <div class="panel-heading">
                        Настройки
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-offset-1">
                                @using (Html.BeginForm("Edit", "Profile", new { userName = $"{Model.UserName}" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        @Html.HiddenFor(vm => vm.UserName)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.BirthDate, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.BirthDate, new {@class = "form-control", type = "date"})
                                            @Html.ValidationMessageFor(m => m.BirthDate, null, new {@class = "text-danger"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.BirthPlace, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.BirthPlace, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.BirthPlace, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Gender, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>()
                                            {
                                                new SelectListItem() { Text = "Мъж", Value = "Мъж"},
                                                new SelectListItem() { Text = "Жена", Value = "Жена"}
                                            },
                                                new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="ImageFile">Аватар</label>
                                        <div class="col-md-9">
                                            <input type="file" name="MyFile" class="form-control" id="ImageFile" accept=".jpeg, .jpg" />
                                            <p style="font-size: 12px; color:slateblue"><strong>Аватарът трябва да е jpg/jpeg формат.</strong></p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-3 col-md-9">
                                            <input type="submit" value="Промени" class="btn btn-success" style="margin-right: 15px;" />
                                            @Html.ActionLink("Откажи", "Overview", "Profile", new { userName = ViewBag.Username }, new { @class = "btn btn-danger" })
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



