@model CalisthenicsSystem.Models.ViewModels.Users.Notes.CreateNoteVm
@{
    ViewBag.Title = "Create";
}

<div class="jumbotron">
    <div clas="container">
        <div class="row">
            @Html.Partial("_ProfileView")
            <div class="col-sm-offset-1 col-sm-8">
                <div class="panel panel-primary" style="background-color: rgba(245, 245, 245, 0)">
                    <div class="panel-heading">
                        Дневник
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-offset-1 col-sm-10">
                                <h4 style="color:dodgerblue">За да създадеш своя дневник е нужно да му дадеш име.</h4>
                                
                                @using (Html.BeginForm("Create", "Note", new { userName = ViewBag.UserName }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group" style="margin-left: 0">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group" style="margin-left: 0">
                                        <input type="submit" value="Създай" class="btn btn-success" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



