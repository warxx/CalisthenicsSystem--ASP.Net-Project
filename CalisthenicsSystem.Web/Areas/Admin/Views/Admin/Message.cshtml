        <div class="row">
            @Html.Partial("_AdminNav")

        </div>
        <div class="row">
            <div class="col-sm-6">
                <p style="font-size: 20px">@Html.DisplayNameFor(vm => vm.Sender): @Html.DisplayFor(vm => vm.Sender)</p>
