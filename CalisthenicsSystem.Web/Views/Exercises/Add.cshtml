@model CalisthenicsSystem.Models.ViewModels.Exercises.AddExerciseVm

@{
    ViewBag.Title = "Add";
}

<div class="jumbotron">
    <div class="container">
        @using (Html.BeginForm("Add", "Exercises", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Създай ново упражнение</h3>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "15" })
                    @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
                </div>
            </div>
            @*<div class="form-group">
                @Html.LabelFor(m => m.ImageUrl, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ImageUrl, null, new { @class = "text-danger" })
                </div>
            </div>*@
            <div class="form-group">
                @Html.LabelFor(m => m.YoutubeUrl, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.YoutubeUrl, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.YoutubeUrl, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MuscleGroup, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.MuscleGroup, new List<SelectListItem>()
                    {
                        new SelectListItem() { Text = "Ръце", Value = "Arms"},
                        new SelectListItem() { Text = "Гърди", Value = "Chest"},
                        new SelectListItem() { Text = "Гръб", Value = "Back"},
                        new SelectListItem() { Text = "Рамо", Value = "Deltoids"},
                        new SelectListItem() { Text = "Корем", Value = "Abs"},
                        new SelectListItem() { Text = "Крака", Value = "Legs"}
                    },
                        new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label  class="col-md-3 control-label" for="ImageFile">File Upload</label>
                <div class="col-md-9">
                    <input type="file" name="MyFile" class="form-control" id="ImageFile" required accept=".jpeg, .jpg" />
                    <p>Снимките трябва да са в jpg/jpeg формат.</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="Добави упражнение" class="btn btn-success" style="margin-right: 15px;" />
                    @Html.ActionLink("Откажи", "Index", null, new { @class = "btn btn-danger" })
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

