@using CalisthenicsSystem.Web.Extensions
@model HandleErrorInfo
@{
    ViewBag.Title = "ArticleArgExcError";
}


<div class="jumbotron">
    <div clas="container">
        <div class="row">
            
            <div class="col-sm-offset-3 col-sm-6">
                <div>
                    <img src="/Content/images/sad-face.png" width="400" height="400" class="img-responsive" style="display: block; margin-left: auto; margin-right: auto;"/>
                    @*@Html.Image("/Content/images/sad-face.png", "400", "400", "sad-face-img", "img-responsive img-error")*@
                    <h3 style="text-align: center; color: red">Възникна грешка при обработване на заявката.</h3>
                    <br/>
                    <p style="font-size: 16px"><strong>Грешка: <u>@Model.Exception.Message</u></strong></p>
                </div>
                
            </div>
            
        </div>
    </div>
</div>


