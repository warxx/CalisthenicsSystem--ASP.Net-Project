<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Calisthenics.bg", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Начало", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Статии", "All", "Articles", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Упражнения", "Index", "Exercises", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Потребители", "All", "Home", new { area = "Users" }, null)</li>
                    <li>@Html.ActionLink("Контакти", "Contacts", "Home", new { area = "" }, null)</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @if (this.User.IsInRole("Admin"))
        {
            <div align="center">
                @Html.ActionLink("Влез в админския панел", "Index", "Admin", new { area = "Admin" }, new { @class = "btn btn-sm btn-danger" })
            </div>
            
        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Calisthenics.bg</p>
        </footer>
    </div>

        @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </body>
</html>
